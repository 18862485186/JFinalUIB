<?xml version="1.0" encoding="UTF-8"?>

<sql-statement namespace="common.ipBlacklist">
	
	<!-- 分页查询：select -->
	<sql id="splitPageSelect">
		<![CDATA[ 
        	select * 
    	]]>
	</sql>
	
	<!-- 分页查询 ：from -->
	<sql id="splitPageFrom">
		<![CDATA[ 
        	from common_ipblacklist
			where 1=1 
			
			<% if(!isEmpty(ip)){ %>
					and ip like #'%$ip$%'#
			<% } %>
    	]]>
	</sql>
	
</sql-statement>